#:kivy 1.9.0

<Screen>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<InGameScreen>:
    SecondsLabel:
        id: playtime
        font_size: 15
        seconds: root.playtime
        color: (0, 0, 0, 1)
        pos: (0, 0)