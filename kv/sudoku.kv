#:kivy 1.9.0

<Screen>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<SudokuCell>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        font_size: 20
        text: str(root.num)
        color: (0, 0, 0, 1)
        center: root.center

<SudokuSquareGroup>:
    spacing: 1, 1

<SudokuBoard>:
    spacing: 1, 1
    rows: 9
    cols: 9


<SudokuScreen>:
    board: board

    FloatLayout:
        SecondsLabel:
            id: playtime
            font_size: '15dp'
            seconds: root.playtime
            color: (0, 0, 0, 1)
            size: 100, 100

        SudokuBoard:
            id: board
            size_hint: (None, None)
            width: root.width
            height: self.width
            pos: 0, root.height - self.height