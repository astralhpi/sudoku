#:kivy 1.9.0


<GridCell>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Line:
            rectangle:
                self.pos + self.size
            width: 1

<NumberCell>:
    size_hint: (None, None)
    pos: self.grid_cell.pos
    size: self.grid_cell.size
    Label:
        size_hint: (None, None)
        text: str(root.num) if root.num != 0 else ''
        font_size: '15sp'
        center: root.center

<CellFocus>:
    size_hint: (None, None)
    pos: self.focused_grid_cell.pos if self.focused_grid_cell is not None else (0, 0)
    size: self.focused_grid_cell.size if self.focused_grid_cell is not None else (0, 0)
    canvas:
        Color:
            rgb: (0, 0.5, 0)
        Rectangle:
            pos: self.pos
            size: self.size

<Subregion>:
    canvas:
        Color:
            rgb: (0, 0, 1)
        Line:
            rectangle:
                self.pos + self.size
            width: 2
    spacing: 1, 1


<SudokuBoard>:

    grid_layer: grid_layer
    focus_layer: focus_layer
    number_layer: number_layer
    canvas:
        Color:
            rgb: (1, 0, 0)
        Line:
            rectangle:
                self.pos + self.size
            width: 1
    GridLayer:
        id: grid_layer
        rows: 3
        cols: 3
        spacing: 2, 2
        size_hint: (1, 1)
        pos_hint: {'top': 1.0}

    FocusLayer:
        id: focus_layer
        size_hint: (1, 1)
        pos_hint: {'top': 1.0}

    NumberLayer:
        id: number_layer
        size_hint: (1, 1)
        pos_hint: {'top': 1.0}


<SudokuScreen>:
    board: board

    FloatLayout:
        SecondsLabel:
            id: playtime
            font_size: '15dp'
            seconds: root.playtime
            color: (0, 0, 0, 1)
            size: 100, 100

        SudokuBoard:
            id: board
            size_hint: (1, None)
            height: self.width
            pos_hint: {'top': 1.0}
