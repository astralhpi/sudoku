#:kivy 1.9.0


<GridCell>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Line:
            rectangle:
                self.pos + self.size
            width: 1

<NumberCell>:
    pos: self.grid_cell.pos
    size: self.grid_cell.size
    Label:
        text: str(root.num)
        font_size: '15sp'
        center: root.center

<Subregion>:
    canvas:
        Color:
            rgb: (0, 0, 1)
        Line:
            rectangle:
                self.pos + self.size
            width: 2
    spacing: 1, 1

<SudokuBoard>:
    grid_layer: grid_layer
    focus_layer: focus_layer
    number_layer: number_layer

    GridLayer:
        id: grid_layer
        rows: 3
        cols: 3
        spacing: 2, 2
        size: root.size
        pos: root.pos

    FocusLayer:
        id: focus_layer
        size: root.size
        pos: root.pos

    NumberLayer:
        id: number_layer
        size: root.size
        pos: root.pos


<SudokuScreen>:
    board: board

    FloatLayout:
        SecondsLabel:
            id: playtime
            font_size: '15dp'
            seconds: root.playtime
            color: (0, 0, 0, 1)
            size: 100, 100

        SudokuBoard:
            id: board
            size_hint: (None, None)
            width: root.width
            height: self.width
            pos: 0, root.height - self.height
